<shrimp type="function" name="EnviroLight" description="Environment light shader" author="rconstruct">
	<input name="inten" description="Light intensity" type="float" default="1"/>
	<input name="lcolor" description="Light color" type="color" default="color( 1, 1, 1 )"/>
	<input name="envname" description="Environment map name" type="string" default="&quot;&quot;"/>
	<input name="envspace" description="Environment map space" type="string" default="&quot;world&quot;"/>
	<input name="envblur" description="Environment blur" type="float" default="0.5"/>
	<input name="envsamples" description="Environment map samples" type="float" default="1"/>
	<input name="shadowname" description="Shadow map name" type="string" default="&quot;&quot;"/>
	<input name="shadowblur" description="Shadow blur" type="float" default="0.001"/>
	<input name="shadowbias" description="Shadow map bias" type="float" default="0.01"/>
	<input name="shadowsamples" description="Shadow map samples" type="float" default="1"/>
	<input name="shadowwidth" description="Shadow map filter width" type="float" default="1"/>
	<input name="shadowfilter" description="Shadow map filter" type="string" default="&quot;gaussian&quot;"/>
	<output name="Cl" description="Light output" type="color"/>
	<include>lights.h</include>
	<code>
		$(Cl) = $(inten) * $(lcolor) * hdri2enviro( $(envname), $(envspace),
							$(envblur), $(envsamples), $(shadowname),
							$(shadowfilter), $(shadowblur), $(shadowsamples),
							$(shadowwidth), $(shadowbias) );
	</code>
<usage>Environment light shader based on hdri2.sl light shader, from The RenderMan Repository, www.renderman.org . Shadow bias defaults to global default, -1, shadow filter defaults to gaussian, with triangle and box as optional.</usage>
</shrimp>
