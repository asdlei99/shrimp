<shrimp type="function" name="Blend_colors" description="Blend two color functions in selected blending mode." author="fredfewo">
	<input name="C1" description="Input first color" type="color" default="color(1, 1, 1)"/>
	<input name="C2" description="Input second color" type="color" default="color(1, 1, 1)"/>
	<input name="bld" description="Blending mode" type="float" default="1"/> 
	<input name="pct" description="Percentage of blending" type="float" default="1"/>
	<input name="mask" description="Mask for the blend" type="float" default="0"/>
	<input name="imask" description="Invert the mask value" type="float" default="0"/>
	<output name="value" description="Blending color of C1 and C2 using blending mode bld" type="color"/>
	<rsl_include>rsl_shrimp_layering.h</rsl_include>	
	<rsl_code>
			$(value) = blendcolor ( $(C1) , $(C2) , $(bld) , $(pct) , $(mask) , $(imask) );
		</rsl_code>
	<usage>Returns the blending color in selected blending mode.</usage>
</shrimp>
