<shrimp type="function" name="Min" description="Return the smallest input" author="rconstruct">
	<input name="a" description="1st input" type_parent="out" type="color point vector normal float" default="0"/>
	<input name="b" description="2nd or subsequent inputs" type_parent="out" type="color point vector normal float" multi="," default="0"/>
	<output name="out" description="out = the smallest input" type="color point vector normal float"/>
	<rsl_code>
		$(out) = min( $(a), $(b) );
	</rsl_code>
	<usage>Returns the minimum of the arguments given. When evaluating point type variables, the arguments will be evaluated on a component basis.</usage>
</shrimp>
