<shrimp type="function" name="Random" description="A Random value" author="rconstruct">
	<input name="min" description="minimum value" type="float" default="0.0"/>
	<input name="max" description="maximum value" type="float" default="1.0"/>
	<output name="val" description="A random value between min and max" type="float color point"/>
	<code>
	$(val) = ($(max)-$(min))*( $(var_type) random() ) + $(min);
	</code>
</shrimp>
