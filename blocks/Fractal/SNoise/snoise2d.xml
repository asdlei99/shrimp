<shrimp type="function" name="SNoise2D" description="Signed 2 dimensional perlin noise function" author="rconstruct">
	<input name="x" description="noise x coordinate" type="float" default="s"/>
	<input name="y" description="noise y coordinate" type="float" default="t"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at (x,y), in range -1 - 1" type="float color point vector"/>
	<include>fractal.h</include>
	<rsl_code>
	#define $(val)_$(val:type)
	#ifdef $(val)_float
		$(val) = $(amplitude) * snoisexy( $(x), $(y) );
	#else
		$(val) = $(amplitude) * $(val:type) vsnoisexy( $(x), $(y) );
	#endif
	</rsl_code>
	<usage>SNoise is exactly like Noise except that the result ranges from -1 to 1 rather than 0 to 1. The average value is therefore zero. 
	</usage> 
</shrimp>
