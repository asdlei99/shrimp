<shrimp type="function" name="PNoise4D" description="4 dimensional periodic noise function" author="rconstruct">
	<input name="p" description="point to sample noise at" type="point" default="P"/>
	<input name="t" description="4th dimension value" type="float" default="time"/>
	<input name="pperiod" description="Point period" type="point" default="5"/>
	<input name="tperiod" description="4d period" type="float" default="1"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at point (p,t), in range 0 - 1" type="float color point vector"/>
	<code>
	$(val) = $(amplitude) * $(var_type) pnoise( $(p), $(t), $(pperiod), 
												$(tperiod) );
	</code>
<usage>Periodic noise, maximum period = 256.</usage>
</shrimp>
