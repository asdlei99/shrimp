<shrimp type="function" name="PNoise3D" description="3 dimensional periodic noise function" author="rconstruct">
	<input name="p" description="point to sample noise at" type="point" default="P"/>
	<input name="pperiod" description="Point period" type="point" default="5"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at point p, in range 0 - 1" type="float color point vector"/>
	<code>
	$(val) = $(amplitude) * $(val:type) pnoise( $(p), $(pperiod) );
	</code>
<usage>Periodic noise, maximum period = 256.</usage>
</shrimp>
