<shrimp type="function" name="FVLNoise4D" description="Filtered 4D Ken Musgrave VLNoise" author="rconstruct">
	<input name="p" description="point to sample noise at" type="point" default="P"/>
	<input name="scale" description="Scale" type="float" default="1"/>
	<input name="width" description="Filter width" type="float" default="0"/>
	<input name="t" description="4d value" type="float" default="time"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at p" type="float color vector point"/>
	<include>fractal.h</include>
	<code>
	#define $(val)_$(var_type)
	#ifdef $(val)_float
		$(val) = $(amplitude) * filteredVLNoisexy( $(p), $(t),
													$(width), $(scale) );
	#else
		$(val) = $(amplitude) * $(var_type) filteredvsnoisexy(
				filteredsnoise( $(p), $(width) ) * $(scale) + $(p),
				filteredsnoise( $(t), $(width) ) * $(scale) + $(t), $(width) );
	#endif
	</code>
	<usage>Filtered 4D Ken Musgrave VLNoise.
	</usage> 
</shrimp>
