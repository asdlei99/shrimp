<shrimp type="function" name="FVLNoise2D" description="Filtered 2 dimensional Ken Musgrave VLNoise function" author="rconstruct">
	<input name="x" description="noise x coordinate" type="float" default="s"/>
	<input name="y" description="noise y coordinate" type="float" default="t"/>
	<input name="scale" description="Scale" type="float" default="1"/>
	<input name="width" description="Filter width" type="float" default="0"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at (x,y)" type="float color vector point"/>
	<rsl_include>shrimp_fractal.h</rsl_include>
	<rsl_code>
	#define $(val)_$(val:type)
	#ifdef $(val)_float
		$(val) = $(amplitude) * filteredVLNoisexy( $(x), $(y),
												 $(width), $(scale));
	#else
		$(val) = $(amplitude) * $(val:type) filteredvsnoisexy(
				filteredsnoise( $(x), $(width) ) * $(scale) + $(x),
				filteredsnoise( $(y), $(width) ) * $(scale) + $(y), $(width) );
	#endif
	</rsl_code>
	<usage>Filtered 2 dimensional Ken Musgrave VLNoise.
	</usage> 
</shrimp>
