<shrimp type="function" name="FVLNoise1D" description="Filtered 1 dimensional Ken Musgrave VLNoise function" author="rconstruct">
	<input name="x" description="noise x coordinate" type="float" default="s"/>
	<input name="scale" description="Scale" type="float" default="1"/>
	<input name="width" description="Filter width" type="float" default="0"/>
	<input name="amplitude" description="Amplitude of noise" type="float" default="1"/>
	<output name="val" description="Noise value at (x,y)" type="float color vector point"/>
	<rsl_include>shrimp_fractal.h</rsl_include>
	<rsl_code>
	#define $(val)_$(val:type)
	#ifdef $(val)_float
		$(val) = $(amplitude) * filteredVLNoise( $(x), $(width), $(scale) );
	#else
		$(val) = $(amplitude) * $(val:type) filteredvsnoise(
				filteredvsnoise( $(x), $(width) ) * $(scale) + $(x), $(width));
	#endif
	</rsl_code>
	<usage>Filtered 1 dimensional Ken Musgrave VLNoise.
	</usage> 
</shrimp>
