<shrimp type="function" name="CellContour" description="Generates contour lines of shaded cells" author="rconstruct">
	<input name="p1" description="First point position" type="point" default="point(0)"/>
	<input name="p2" description="Second point position" type="point" default="point(1)"/>
	<input name="f1" description="Primary feature" type="float" default="0"/>
	<input name="f2" description="Secondary feature" type="float" default="1"/>
	<input name="lthick" description="Contour line thickness" type="float" default="15"/>
	<input name="P" description="Surface point" type="point" default="P"/>
	<output name="val" description="Output value" type="float"/>
	<rsl_include>rsl_shrimp_helpers.h</rsl_include>
	<rsl_code>
		$(val) = step( $(lthick) * (
					distance( $(p1), $(p2) ) / (
					distance( $(p1), $(P) ) + distance( $(P), $(p2) ) ) ) ,
					$(f2) - $(f1) );
	</rsl_code>
	<usage>This function generates contour lines on shaded cells.</usage>
</shrimp>
