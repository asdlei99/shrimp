<shrimp type="function" name="FSmoothpulse" description="Larry Gritz&apos;s filtered smoothpulse" author="rconstruct">
	<input name="x" description="Value to test" storage="varying" type="float" default="s"/>
	<input name="min1" description="First minimum" type="float" default="0"/>
	<input name="max1" description="First maximum" type="float" default="0.3"/>
	<input name="min2" description="Second minimum" type="float" default="0.7"/>
	<input name="max2" description="Second maximum" type="float" default="1"/>
	<input name="dx" description="Filter width" type="float" default="0.1"/>
	<output name="val" description="Value of the wave at x" type="float"/>
	<rsl_include>rsl_shrimp_helpers.h</rsl_include>
	<rsl_code>
		$(val) = filteredsmoothpulse(	$(min1), $(max1), $(min2),
										$(max2), $(x), $(dx));
	</rsl_code>
	<usage>Antialiased version of &quot;smoothpulse&quot; by Larry Gritz. Returns filteredsmoothstep(e0, e1, x, dx) - filteredsmoothstep( e2, e3, x, dx).</usage>
</shrimp>
