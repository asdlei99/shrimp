<shrimp type="function" name="LGMarble" description="Larry Gritzs marble veining" author="rconstruct">
	<input name="veinfreq" description="Veining frequency" type="float" default="1"/>
	<input name="veinlevels" description="Veining levels" type="float" default="2"/>
	<input name="warpfreq" description="Warping frequency" type="float" default="1"/>
	<input name="warping" description="Warping intensity" type="float" default="0.5"/>
	<input name="sharpness" description="Sharpness" type="float" default="8"/>
	<input name="basecolor" description="Base color" type="color" default="color( .12, .22, .27 )"/>
	<input name="veincolor" description="Veining color" type="color" default="color( .37, .58, .37 )"/>
	<input name="pp" description="Surface point" type="point" default="P"/>
	<output name="val" description="Output color" type="color"/>
	<include>extrapatterns.h</include>
	<code>
		$(val) = veinedmarble(	$(veinfreq), $(veinlevels), $(warpfreq),
								$(warping), $(sharpness), $(basecolor),
								$(veincolor), $(pp) );
	</code>
	<usage>Larry Gritz's LGMarble veining pattern, mixing basecolor to veincolor.</usage> 
</shrimp>
