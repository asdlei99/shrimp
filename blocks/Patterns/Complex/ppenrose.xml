<shrimp type="function" name="PaintedPenrose" description="Painted Penrose rhomb tile" author="rconstruct">
	<input name="sx" description="X value to sample" type="float" default="s"/>
	<input name="sy" description="Y value to sample" type="float" default="t"/>
	<input name="tsize" description="Tile size" type="float" default="1"/>
	<input name="cskinny" description="Skinny color" type="color" default="color( 0.2, 0.4, 0.65 )"/>
	<input name="cfat" description="Fat color" type="color" default="color( 0.92, 0.33, 0.61 )"/>
	<output name="val" description="Output color" type="color"/>
	<include>extrapatterns.h</include>
	<code>
		$(val) = painted_tiling( $(sx), $(sy), $(tsize), $(cskinny), $(cfat) );
	</code>
	<usage>Painted Penrose rhomb tiles, by Derek Ledbetter.</usage>
</shrimp>
