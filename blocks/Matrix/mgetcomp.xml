<shrimp type="function" name="MatrixGetComp" description="Get a component of a matrix" author="rconstruct">
    <input name="minput" description="Matrix input" type="matrix" default="0"/>
    <input name="row" description="Input row" type="float" default="1"/>
    <input name="column" description="Input column" type="float" default="1"/>
    <output name="mcomponent" description="Matrix component" type="float"/>
	<code>
    $(mcomponent) = comp( $(minput), $(row), $(column) );
	</code>
<usage>Gets the row/column component of matrix m.</usage>
</shrimp>
